<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--ContextListener-->
    <listener>
        <listener-class>listeners.ServerContextListener</listener-class>
    </listener>

    <!--register-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlets.sessionServlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--login-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.sessionServlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- logout-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.sessionServlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- deleteUser-->
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>servlets.userServlets.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/removeuser</url-pattern>
    </servlet-mapping>
    <!--add car-->
    <servlet>
        <servlet-name>NewCarServlet</servlet-name>
        <servlet-class>servlets.carsServlets.NewCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewCarServlet</servlet-name>
        <url-pattern>/addcar</url-pattern>
    </servlet-mapping>
    <!--remove car-->
    <servlet>
        <servlet-name>DeleteCarServlet</servlet-name>
        <servlet-class>servlets.carsServlets.DeleteCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCarServlet</servlet-name>
        <url-pattern>/removecar</url-pattern>
    </servlet-mapping>

    <!--edit car-->
    <servlet>
        <servlet-name>ChangeCarServlet</servlet-name>
        <servlet-class>servlets.carsServlets.ChangeCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeCarServlet</servlet-name>
        <url-pattern>/editcar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>viewUsersServlet</servlet-name>
        <servlet-class>servlets.userServlets.viewUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewUsersServlet</servlet-name>
        <url-pattern>/viewusers</url-pattern>
    </servlet-mapping>
    <!-- TODO: map new servlets-->


    <!--AmmendProduct -->
    <servlet>
        <servlet-name>AmmendProductServlet</servlet-name>
        <servlet-class>servlets.productServlets.AmmendProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AmmendProductServlet</servlet-name>
        <url-pattern>/ammendproduct</url-pattern>
    </servlet-mapping>

    <!--DeleteProduct -->
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>servlets.productServlets.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/deleteproduct</url-pattern>
    </servlet-mapping>

    <!--NewProduct -->
    <servlet>
        <servlet-name>NewProductServlet</servlet-name>
        <servlet-class>servlets.productServlets.NewProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewProductServlet</servlet-name>
        <url-pattern>/addproduct</url-pattern>
    </servlet-mapping>

    <!--ViewProductDetails -->
    <servlet>
        <servlet-name>ViewProductDetailsServlet</servlet-name>
        <servlet-class>servlets.productServlets.ViewProductDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProductDetailsServlet</servlet-name>
        <url-pattern>/viewproductdetails</url-pattern>
    </servlet-mapping>

    <!--ViewProductDetails -->
    <servlet>
        <servlet-name>ViewProductServlet</servlet-name>
        <servlet-class>servlets.productServlets.ViewProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProductServlet</servlet-name>
        <url-pattern>/viewproduct</url-pattern>
    </servlet-mapping>
    
    <!-- filters -->
    <filter>
        <filter-name>Filterindex</filter-name>
        <filter-class>filters.loggedinFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filterindex</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

</web-app>
